mixin flex-container()
    section.flex-container.container
        h1.flex-container__title <span>Комплексные&nbsp</span> предложения для мостостроения
        div.flex-container__wrapper 
            div.flex-container__row-1.flex-container__row
                div.flex-container__item Мостовая сталь/Стальные конструкции мостов
                div.flex-container__union-items
                    div.flex-container__item Железобетонные конструкции мостов
                    div.flex-container__item Дорожные ограждения барьерного типа
            div.flex-container__row-2.flex-container__row
                div.flex-container__item Шпунтовой замок
                div.flex-container__item Мостовой крепеж
                div.flex-container__item Профили для деформационных швов
            div.flex-container__row-3.flex-container__row
                div.flex-container__item Плетеные габионы
                div.flex-container__item Модульные мосты
