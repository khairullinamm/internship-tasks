mixin form(props)
	.form&attributes(attributes)(data-component='form')
		h1.form__title Форма обратной #[br] связи
		.form__container
			p.form__input-name.hidden.form__email-name E-mail
			input.form__email.form__passive(type="email" placeholder="E-mail")
			p.form__input-name.hidden.form__msg-name Ваше сообщение
			textarea.form__msg.form__passive(type="text" placeholder="Ваше сообщение")
			.form__add-block
				button.form__add-file.form__btn
					span Прикрепить файл
					+svg('add').form__svg-add.form__svg
					input(type="file").form__file
			.form__checkbox
				+svg('agree').form__checkbox-yes.hidden
				input(type='checkbox').form__checkbox-input
				label Вы подтверждаете, что ознакомились #[span с политикой обработки персональных данных ]
			button.form__send.form__btn
				span Отправить
				+svg("arrow").form__svg-arrow.form__svg